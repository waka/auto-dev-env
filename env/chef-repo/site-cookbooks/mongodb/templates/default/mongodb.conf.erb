# data saved path
dbpath = /usr/local/mongodb

# fork run in background
fork = true

# log file path & append mode
logpath = /usr/local/mongodb/mongodb.log
logappend = true

# enable write ahead logging
journal = true

# smallnized data file size
smallfiles = true

# only accept local connections
bind_ip = 127.0.0.1

# pid file path
pidfilepath = /usr/local/mongodb/mongodb.pid
